<h1>Metrics</h1>

<table class="table table-striped table-bordered table-condensed table-responsive">
  <thead>
    <tr>
      <th></th>
      <% @dates.each do |date| %>
        <th><%= l(date.date, format: :short) %></th>
      <% end %>
    </tr>
  </thead>
  <% @metrics.each do |metric| %>
    <tr>
      <th style="width: 200px">
        <a title="<%= metric.reason %>"><%= metric.name %></a>
      </th>
      <% @dates.each do |date| %>
        <td>
          <%= metric.daily_metrics.all.find { |d| d.date == date.date }.try(:value) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<script type="text/javascript">$(document).ready(function() { $('th a').tooltip({placement: 'bottom'}) })</script>